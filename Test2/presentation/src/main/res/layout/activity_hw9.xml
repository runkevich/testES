<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>

    <import type="android.view.View" />

    <variable
        name="user"
        type="com.runkevich8.gmail.test.homework.hw9.User" />
</data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/colorImage"
            app:imageUrl="@{user.imageUrl}"
            android:layout_height="150dp"
            android:layout_width="150dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/hw9_name"
            android:textSize="16sp"
            android:textColor="@{user.gender? @color/colorAccent : @color/colorPrimary }"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.name + ' ' + user.surName}"/>

        <TextView
            android:id="@+id/hw9_age"
            android:textSize="14sp"
            android:textColor="@{user.gender? @color/colorAccent : @color/colorPrimary }"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.age}"/>

    </LinearLayout>
    </LinearLayout>
</layout>